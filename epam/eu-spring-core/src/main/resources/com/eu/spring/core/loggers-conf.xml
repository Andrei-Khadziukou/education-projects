<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="eventLogger, logger" class="com.eu.spring.core.ConsoleEventLogger" />

    <bean id="abstractFileLogger" abstract="true" init-method="init">
        <constructor-arg value="./eu-spring-core-log.txt"/>
    </bean>

    <bean id="fileEventLogger" class="com.eu.spring.core.FileEventLogger" parent="abstractFileLogger"/>

    <bean id="cacheEventLogger" class="com.eu.spring.core.CacheEventLogger" destroy-method="destroy"
          parent="fileEventLogger" lazy-init="true">
        <constructor-arg type="int" value="4"/>
    </bean>
</beans>