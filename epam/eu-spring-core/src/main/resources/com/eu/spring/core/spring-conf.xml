<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.eu.spring.core.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Eduard"/>
    </bean>

    <alias name="client" alias="mainClient"/>

    <bean name="eventLogger, logger" class="com.eu.spring.core.ConsoleEventLogger" />

    <bean id="app" class="com.eu.spring.core.App">
        <constructor-arg ref="mainClient"/>
        <constructor-arg ref="logger"/>
    </bean>

    <bean id="event" name="generatedEvent" class="com.eu.spring.core.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.eu.spring.core.FileEventLogger" init-method="init">
        <constructor-arg value="./eu-spring-core-log.txt"/>
    </bean>

    <bean id="cacheEventLogger" class="com.eu.spring.core.CacheEventLogger" destroy-method="destroy">
        <constructor-arg index="0" value="4"/>
        <constructor-arg index="1" value="./eu-spring-core-log.txt"/>
    </bean>

</beans>